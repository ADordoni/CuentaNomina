<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Index</title>
    </head>
    <body>
        <div>
        @if (@Model != null)
        {
            @Model.nombre
        }            
            <form method="post" action="/Home/Bienvenido">
